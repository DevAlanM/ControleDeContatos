@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)? </h3>
</div>
<div class="text-center" style="margin-top: 20px;   ">
    <a class="btn btn-primary"  asp-action="Index" asp-controller="Contato" role="button" >Cancelar exclusão</a>
    <a class="btn btn-danger" asp-action="Apagar" asp-controller="Contato"  role="button" asp-route-id="@Model.Id">Confirmar exclusão</a>
</div>